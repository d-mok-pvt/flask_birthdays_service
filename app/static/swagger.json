{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "Birthday management Api"
    },
    "paths": {
        "/api/birthdays": {
            "get": {
                "summary": "Retrieve a list of all birthdays",
                "responses": {
                    "200": {
                        "description": "A list of birthdays"
                    }
                }
            },
            "post": {
                "summary": "Create a new birthday",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "An object containing the uuid of deleted item",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/Birthday_data"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successfully created a new birthday"
                    }
                }
            }
        },
        "/api/birthdays/{uuid}": {
            "put": {
                "summary": "Updates a birthday record by uuid",
                "consumes": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "uuid",
                        "in": "path",
                        "description": "The ID of the birthday record to delete",
                        "required": true,
                        "type": "string",
                        "format": "uuid"
                    },
                    {
                        "in": "body",
                        "name": "body",
                        "description": "An object containing the birthday data for update",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/Birthday_data"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation"
                    }
                }
            },
            "delete": {
                "summary": "Delete a birthday record by uuid",
                "consumes": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "uuid",
                        "in": "path",
                        "description": "The ID of the birthday record to delete",
                        "required": true,
                        "type": "string",
                        "format": "uuid"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation"
                    }
                }
            }
        }
    },
    "definitions": {
        "Birthday_data": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "format": "string"
                },
                "date": {
                    "type": "string",
                    "format": "date"
                }
            }
        }
    }
}
